<% var currentPage="home" ; %>
    <%- include('partials/header', {currentPage: currentPage}) %>
        <section class="list-group d-flex flex-column align-items-center justify-content-center">
            <div class="text-center mb-4 mt-3">
                <h1 class="display-7">Toma el control de tus finanzas, <%= userName  %>!</h1>
            </div>

            <div class="container mt-10">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                       
                        <table class="table table-hover ">
                            <thead>
                                <tr class="border">
                                    <th scope="col">Cuenta</th>
                                    <th scope="col">Moneda</th>
                                    <th scope="col">Saldo actual</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% listaCuentas.sort((a,b)=> a.nombre.localeCompare(b.nombre)).forEach(function(cuenta) { %>
                                    <tr value="<%= cuenta._id %>">
                                        <td>
                                            <a href="/cuentas/editar?cuentaId=<%= cuenta._id %>">
                                                <h3 class="mb-0 font-weight-bold account-name">
                                                    <%= cuenta.nombre %>
                                                </h3>
                                            </a>
                                        </td>
                                        <td>
                                            <% if (cuenta.moneda=="$" ) { %>
                                                <div>
                                                    <img src="/images/simbolo peso.png" alt="simbolo de peso" class="rounded-circle" width="40"
                                                        height="36">
                                                </div>
                                                <% } else if(cuenta.moneda=="U$D" ) { %>
                                                    <div>
                                                        <img src="/images/simbolo dolar.png" alt="simbolo de dolar" class="rounded-circle"
                                                            width="40" height="36">
                                                    </div>
                                                    <% } %>
                                        </td>
                                        <td class="text-right">
                                            <h3 class="mb-0 font-weight-bold">
                                                <%= cuenta.saldo ? cuenta.saldo : 0 %>
                                            </h3>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
    <a class="btn btn-primary botones mt-10" href="/cuentas/agregar/">Agregar Cuenta</a>

        </section>

        <%- include ('partials/footer.ejs') %>