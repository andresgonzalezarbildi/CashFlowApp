<% var currentPage="home" ; %>
<%- include('partials/header', {currentPage: currentPage}) %>
    <div class="">
    <h1>Bienvenido <%= user.userName %></h1>
    
    <a href="/comprobantes">Ver comprobantes</a>
    <section class="list-group">
        <h2>Cuentas</h2>
        <div class="col-md-4 d-flex align-items-center text-center">
            <ul class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center row">
                <% listaCuentas.sort((a,b)=> a.nombre.localeCompare(b.nombre)).forEach(function(cuenta) { %>
                    <li value="<%= cuenta._id %>" class="list-group-item list-group-item-action d-flex gap-3 py-3">
                        <a class="d-flex gap-2 w-100 justify-content-between">
                            <% if (cuenta.moneda == "$") { %>
                                <img src="/images/simbolo peso.png" alt="simbolo de peso" class="rounded-circle flex-shrink-0" width="36" height="32"> 
                                <% } else if(cuenta.moneda == "U$D") { %> 
                                    <img src="/images/simbolo dolar.png" alt="simbolo de dolar" class="rounded-circle flex-shrink-0" width="36" height="32"> 
                                    <% } %>
                                    <div class="mb-0">
                                        
                                        <%= cuenta.nombre %>  <%= cuenta.saldo ? cuenta.saldo : 0 %>
                                    </div>
                                </a>
                            </li>
                            <% }); %>
                            
                        </ul>
                    </div>
    </section>
    <section>
        <a href="cuentas">Modificar cuentas</a>
        <a href="conceptos">Modificar conceptos</a>

    </section>



    </div>
   
<%- include ('partials/footer.ejs') %>